{
  "name": "mikoide",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:win": "concurrently \"vite\" \"cmake -S . -B build -DCMAKE_BUILD_TYPE=Debug && cmake --build build --config Debug && build/Debug/MikoIDE.exe\"",
    "dev:linux": "concurrently \"vite\" \"cmake -S . -B build -DCMAKE_BUILD_TYPE=Debug && cmake --build build && ./build/MikoIDE\"",
    "build:frontend": "tsc -b && vite build",
    "build:cli:win": "bun run script/postprocessing/buildcli.ts",
    "build:cli:linux": "bun run script/postprocessing/buildcli.ts",
    "build:release:win": "bun run build:frontend && bun run script/make.ts build && bun run build:cli:win && bun run script/postprocessing/buildinstall.ts",
    "build:release:linux": "bun run build:frontend && bun run ./script/make.ts build"
  },
  "dependencies": {
    "@fontsource-variable/inter": "^5.2.6",
    "@fontsource-variable/jetbrains-mono": "^5.2.6",
    "@motionone/solid": "^10.16.4",
    "@tailwindcss/vite": "^4.1.11",
    "commander": "^14.0.0",
    "file-saver": "^2.0.5",
    "lucide-solid": "^0.536.0",
    "makensis": "^3.0.1",
    "monaco-editor": "^0.52.2",
    "sass": "^1.89.2",
    "simple-icons": "^15.9.0",
    "solid-js": "^1.9.7",
    "tailwindcss": "^4.1.11",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.7",
    "concurrently": "^9.2.0",
    "html-to-image": "^1.11.13",
    "typescript": "5.9.2",
    "vite": "^7.0.6",
    "vite-plugin-singlefile": "^2.3.0",
    "vite-plugin-solid": "^2.11.8"
  }
}