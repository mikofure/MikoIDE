{
  "name": "mikoide",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "mikobench"
  ],
  "scripts": {
    "dev": "bun --cwd mikobench dev",
    "build": "bun --cwd mikobench vite build",
    "preview": "bun --cwd mikobench run preview",
    "build:cmake": "bun run tools/build.ts",
    "build:win": "bun run build && bun run buildtobin && bun run build:cmake",
    "clean:cmake": "bun run tools/clean.ts",
    "buildtobin": "bun run tools/utils/buildtobin.ts",
    "iconconvert": "bun run tools/utils/iconconvert.ts"
  },
  "dependencies": {
    "@types/node": "latest",
    "glob": "^11.0.3"
  },
  "devDependencies": {
    "bun-types": "latest",
    "typescript": "latest"
  }
}